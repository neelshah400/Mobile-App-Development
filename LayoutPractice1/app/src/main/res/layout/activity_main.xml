<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/id_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_button3"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@+id/id_button3"
        android:layout_toLeftOf="@+id/id_button3"
        android:text="Button 1" />

    <Button
        android:id="@+id/id_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_button3"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/id_button3"
        android:layout_toRightOf="@+id/id_button3"
        android:text="Button 2" />

    <Button
        android:id="@+id/id_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="Button 3" />

    <Button
        android:id="@+id/id_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button3"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@+id/id_button3"
        android:layout_toLeftOf="@+id/id_button3"
        android:text="Button 4" />

    <Button
        android:id="@+id/id_button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button3"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/id_button3"
        android:layout_toRightOf="@+id/id_button3"
        android:text="Button 5" />

    <TextView
        android:id="@+id/id_text1"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_button1"
        android:layout_alignStart="@+id/id_button1"
        android:layout_alignLeft="@+id/id_button1"
        android:text="OFF" />

    <TextView
        android:id="@+id/id_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_button2"
        android:layout_alignEnd="@+id/id_button2"
        android:layout_alignRight="@+id/id_button2"
        android:text="OFF" />

    <TextView
        android:id="@+id/id_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button3"
        android:layout_centerHorizontal="true"
        android:text="OFF" />

    <TextView
        android:id="@+id/id_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button4"
        android:layout_alignStart="@+id/id_button4"
        android:layout_alignLeft="@+id/id_button4"
        android:text="OFF" />

    <TextView
        android:id="@+id/id_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button5"
        android:layout_alignEnd="@+id/id_button5"
        android:layout_alignRight="@+id/id_button5"
        android:text="OFF" />
</RelativeLayout>